@{
    ViewBag.Title = "Nouveau projet";

}


<h2>Ajoût d'un nouveau projet</h2>
<hr />
<p>@ViewBag.Error</p>
<form method="post" action="~/Home/NouveauProjet">
    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Nom du projet</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="nomprojet" name="nomprojet" placeholder="Nom du projet" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Trigramme</label>
        <div class="col-sm-10">
            <input type="text" maxlength="3" class="form-control" id="colFormLabel" name="trigramme" placeholder="Trigramme Ex: ABC" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="description" name="description" placeholder="Phrase résumant le projet" rows="3" required></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Responsable</label>
        <div class="col-sm-10">
            <div class="dropdown">
                <select class="form-control" id="idresponsable" name="idresponsable" required>
                    @foreach (var utilisateur in ViewBag.Utilisateurs)
                    {
                        <option value="@utilisateur.ID">@utilisateur.Prenom @utilisateur.Nom</option>
                    }
                </select>
            </div>

        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Valider</button>
        </div>
    </div>
</form>
