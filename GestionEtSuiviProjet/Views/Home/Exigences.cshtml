
@{
    ViewBag.Title = "Exigences";
    if (ViewBag.ListeExigences == null)
    {
        ViewBag.ListeExigences = new List<esimed.bean.sgprojet.Exigence>();
    }
    List<esimed.bean.sgprojet.Exigence> ListeExigences = ViewBag.ListeExigences;
}

<h2>Exigences</h2>

<div class="container-fluid ">
    <div class="row">
        <a href="~/Home/NouvelleExigence?idProjet=@ViewBag.IDProjet" class="btn btn-primary btn-lg btn-block">Ajouter une nouvelle exigence</a>
    </div>
    <div class="row">
        <div class="col-md12">
            <h3>Aperçu des prochaines exigences</h3>
            <p>
                @Html.Partial("ListeExigences", ListeExigences)
            </p>
        </div>
    </div>
</div>