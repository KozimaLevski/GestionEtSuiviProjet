
@{
    ViewBag.Title = "Taches";
    if (ViewBag.ListeTaches == null)
    {
        ViewBag.ListeTaches = new List<esimed.bean.sgprojet.Tache>();
    }
    List<esimed.bean.sgprojet.Tache> ListeTaches = ViewBag.ListeTaches;
}

<h2>Taches</h2>

<div class="container-fluid ">
    <div class="row">
        <a href="~/Home/NouvelleTache?idProjet=@ViewBag.IDProjet" class="btn btn-primary btn-lg btn-block">Ajouter une nouvelle tâche</a>
    </div>
    <div class="row">
        <div class="col-md12">
            <h3>Aperçu des prochaines tâches</h3>
            <p>
                @Html.Partial("ListeTaches", ListeTaches)
            </p>
        </div>
    </div>
</div>
