
@{
    ViewBag.Title = "Exigence";
    if (ViewBag.Exigence == null)
    {
        ViewBag.Exigence = new esimed.bean.sgprojet.Exigence();
    }
    esimed.bean.sgprojet.Exigence Exigence = ViewBag.Exigence;

    if (ViewBag.ListeTachesAssocies == null)
    {
        ViewBag.ListeTachesAssocies = new List<esimed.bean.sgprojet.Tache>();
    }
    List<esimed.bean.sgprojet.Tache> ListeTachesAssocies = ViewBag.ListeTachesAssocies;
}

<h2>Visualisation d'une exigence</h2>

<div class="container" style="background-color: #eaf5ff!important;border-radius: .4rem;">
    <h1>@ViewBag.ProjetSelect.Nom : Exigence @Exigence.Trigramme</h1>
    <p>@Exigence.Description</p>
    <p>
        @{ 
            if (Exigence.IsTypeFonctionnelle == true)
            {
                <p>
                    Est de type fonctionnelle
                </p>                
            }

            if (Exigence.IsTypeFonctionnelle == false)
            {
                <p>
                    Est de type non fonctionnelle.L'exigence porte sur
                </p>                 
            }
        }
    </p>
    <p>
    </p>
</div>



<div class="row">
    <div class="col-md-7">
        <h3>Liste des Taches associés</h3>
        <p>
            @Html.Partial("ListeTaches", ListeTachesAssocies)
        </p>
    </div>

    <div class="col-md-5">
        <h3>Actions</h3>
        <br />
        <a href="#" class="btn btn-primary btn-lg btn-block">Associer une tache à la exigence</a>
        <a href="#" class="btn btn-primary btn-lg btn-block">Modifier l'exigence</a>
    </div>
</div>