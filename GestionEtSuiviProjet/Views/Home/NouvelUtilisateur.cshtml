@{
    ViewBag.Title = "Nouvel utilisateur";

}


<h2>Ajoût d'un nouvel utilisateur</h2>
<hr />
<form method="post" action="~/Home/NouvelUtilisateur">
    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Nom</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="nomutilisateur" name="nomutilisateur" placeholder="Nom de l'utilisateur" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Prénom</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="prenomutilisateur" name="prenomutilisateur" placeholder="Prénom de l'utilisateur" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Trigramme</label>
        <div class="col-sm-10">
            <input type="text" maxlength="3" class="form-control" id="trigramme" name="trigramme" placeholder="Trigramme Ex: ABC" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Est chef de projet ?</label>
        <div class="col-sm-10">
            <input class="form-check-input" type="checkbox" value="" id="estchefdeprojet" name="estchefdeprojet">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Valider</button>
        </div>
    </div>
</form>