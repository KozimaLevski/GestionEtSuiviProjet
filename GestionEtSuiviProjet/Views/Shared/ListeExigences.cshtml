@{
    if (Model.Count != 0)
    {
        if (Model.ID != null && Model.ID != 0)
        {
            <div class="row">
                <div class="col-md-3">
                    <h5>Voir plus : </h5>
                </div>
                <div class="col-md-9">

                    <a href="~/Home/Exigences?idProjet=@Model.Projet.ID&exigencesorderby=1" class="btn btn-info btn-sm" role="button">Exigences terminés</a>
                    <a href="~/Home/Exigences?idProjet=@Model.Projet.ID&exigencesorderby=2" class="btn btn-info btn-sm" role="button">Exigences en cours</a>
                    <a href="~/Home/Exigences?idProjet=@Model.Projet.ID&exigencesorderby=3" class="btn btn-info btn-sm" role="button">Exigences en attente</a>
                </div>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Libelle</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    <tr class="text-success">
                        <td>@Model.Libelle</td>
                        <td>@Model.Description</td>
                        <td>
                            <a href="~/Home/Exigence?idExigence=@Model.ID" class="btn btn-primary btn-sm" role="button">GO</a>
                        </td>
                    </tr>
                </tbody>
            </table>


        }
    }
    else
    {

        <div class="row">
            <div class="col-md-12">
                <hr />
                <p>Il n'y a pas encore de exigences.</p>
            </div>
        </div>

    }
}
